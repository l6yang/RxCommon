<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="baseFragStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#EFEFEF</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="baseActStyle" parent="baseFragStyle">
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!--new-->
    <style name="dropDownStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--可以看到该属性 overlap：重叠 Anchor：描-->
        <item name="overlapAnchor">false</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:dropDownListViewStyle">@style/dropDownStyle</item>
        <item name="selectableItemBackground">@drawable/menu_background</item>
        <item name="android:selectableItemBackground">@drawable/menu_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
    </style>

    <style name="layout_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="rightWeightStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="SwitchCompat.TextAppearance" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/src_switch_check</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--app:theme=""-->
    <style name="SwitchCompat.Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorSwitchThumbNormal">@android:color/holo_red_light</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
